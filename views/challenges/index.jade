extends ../layout

block content
  h1= title
  p.lead
    | Here are the queries that return the challenges used in the templates.  Feel free to 
    a(href="/challenges/new") create a new one
    | .
  table.table.table-striped
    thead
      tr
        th Name
        th Description
        th Available for Use?
        th
        th
    for record in records
      tr
        td= record.name
        td= record.description
        td= record.availableForUse
        td: a(href="/challenges/#{record.id}") View
        td: a(href="/challenges/#{record.id}/edit") Edit